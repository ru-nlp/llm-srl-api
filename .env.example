# API Configuration
API_TITLE=SRL API Service
API_VERSION=0.1.0
API_PREFIX=/api/v1
DEBUG=false

# Server Configuration
HOST=0.0.0.0
PORT=8080  # Default port (8080 to avoid conflict with vLLM server on 8000)
WORKERS=1
LOG_LEVEL=INFO

# OpenAI/vLLM Configuration
OPENAI_API_BASE_URL=http://localhost:8000/v1  # vLLM server URL
OPENAI_API_KEY=your-api-key-here  # Set to any value for vLLM
OPENAI_MODEL_NAME=t-tech/T-lite-it-1.0  # Model deployed in vLLM

# Spacy Configuration
SPACY_MODEL=ru_core_news_lg  # Russian language model

# Resource Files (located in res/ directory)
ROLE_MAPPING_FILE=role-mapping.json
FORM_MAPPING_FILE=form-mapping.json
EXAMPLES_FILE=groupped_examples.json 